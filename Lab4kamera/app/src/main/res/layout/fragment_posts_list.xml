<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.phijo967.lab4kamera.fragments.PostsFragment"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <Button
        android:id="@+id/postFragmentUpdatePostsButton"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/posts_update_button"
        android:textSize="12sp"
        android:background="@color/grass_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"/>

    <FrameLayout
        android:id="@+id/postFragmentListHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/postFragmentUpdatePostsButton"
        >

        <ListView android:id="@android:id/list" android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView android:id="@android:id/empty" android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="center"/>

    </FrameLayout>
</RelativeLayout>
